# Honeypot Environment Variables
# Copy this file to .env and customize values
# Environment variables override config.toml settings
# Prefix: HONEYPOT_ | Nested fields use __ (double underscore)

# Server
HONEYPOT_SERVER__HOST=0.0.0.0
HONEYPOT_SERVER__HTTP_PORT=80
HONEYPOT_SERVER__HTTPS_PORT=443
HONEYPOT_SERVER__PUBLIC_URL=https://honeypot.example.com
# Max ports to listen on (default: 128 for debug, 0=all for release)
# HONEYPOT_SERVER__MAX_PORTS=128

# TLS (optional)
HONEYPOT_SERVER__TLS_CERT=/path/to/cert.pem
HONEYPOT_SERVER__TLS_KEY=/path/to/key.pem

# Database
HONEYPOT_DATABASE__DRIVER=sqlite
HONEYPOT_DATABASE__URL=honeypot.db
# SQLite page cache in MB (default: 16). With cache=shared, this is the total
# shared cache across all pool connections. Set based on available server memory.
HONEYPOT_DATABASE__CACHE_SIZE_MB=16

# GeoIP
HONEYPOT_GEOIP__DATABASE=data/GeoLite2-City.mmdb

# Logging
HONEYPOT_LOGGING__LEVEL=info
# Set to "gcp" for structured JSON logs (GCP Cloud Logging), omit for human-readable
# LOG_FORMAT=gcp

# Protocol Emulation
HONEYPOT_EMULATION__SSH_BANNER=SSH-2.0-OpenSSH_8.9p1 Ubuntu-3ubuntu0.4
HONEYPOT_EMULATION__FTP_BANNER=220 FTP Server ready.
HONEYPOT_EMULATION__MYSQL_VERSION=5.7.42-0ubuntu0.18.04.1
